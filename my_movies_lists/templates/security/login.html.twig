{% extends 'base.html.twig' %}

{% block stylesheets %}
        <link rel="stylesheet" href="login.style.css">
        <link rel="stylesheet" href="style.css">
{% endblock %}

{% block body %}
<div class='container text-center'>
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="font-weight-normal text-center">Please sign in</h1> 
            <div class="row-lg-9 center-block"></div>
                <div id='input' class="col-lg-9 center-block">
                        <label for="inputEmail" class="sr-only">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-50" placeholder="Email" required autofocus>
                </div>
                <div id='input' class="col-lg-9 center-block">
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control w-50" placeholder="Password" required>
                    
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >
                </div>
                <!-- /.col-lg-6 -->
        

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}
        <button id="sign" class="btn btn-lg btn-primary" type="submit">
            Sign in
        </button>
    </form>
</div>
{% endblock %}
