{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <h1>Results for </h1>

        <div class = 'row'>
            {% for movie in movies.results %}
                <div class = 'col-lg-3'>
                    <div class="card" style="width: 18rem;">
                        <a href="{{ path('movies_details', {'id': movie.id}) }}"><img src="http://image.tmdb.org/t/p/w300{{ movie.poster_path }}" class="card-img-top" alt="..."></a>
                    </div>
                </div>
                
            {% endfor %}
                
        </div>
    </div>

{% endblock %}