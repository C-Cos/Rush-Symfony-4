{% extends 'base.html.twig' %}

{% block title %}Lists index{% endblock %}

{% block body %}
    <h1>Lists index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Listname</th>
                <th>Description</th>
                <th>Create_date</th>
                <th>Edit_date</th>
                <th>Privacy</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for list in lists %}
            <tr>
                <td>{{ list.id }}</td>
                <td>{{ list.listname }}</td>
                <td>{{ list.description }}</td>
                <td>{{ list.createDate ? list.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ list.editDate ? list.editDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ list.privacy ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('lists_show', {'id': list.id}) }}">show</a>
                    <a href="{{ path('lists_edit', {'id': list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('lists_new') }}">Create new</a>
{% endblock %}
